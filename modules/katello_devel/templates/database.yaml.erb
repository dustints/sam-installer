development:
  adapter: <%= @db_adapter %>
  database: <%= @db_name %>
<% if @db_type == 'sqlite' -%>
  pool: 5
  timeout: 5000
<% else -%>
  username: <%= @db_username %>
  password: <%= @db_password %>
  host: localhost
  encoding: UTF8
